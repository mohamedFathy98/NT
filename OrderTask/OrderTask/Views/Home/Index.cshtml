@{
    ViewData["Title"] = "Home";
}
<div class="container py-5">
    <div class="row justify-content-center mb-4">
        <div class="col-12 text-center">
            <h1 class="display-5 mb-3">Welcome to OrderTask</h1>
            <p class="lead text-muted">Manage your products and orders efficiently.</p>
        </div>
    </div>
    <div class="row justify-content-center g-4">
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-box-seam" style="font-size: 2.5rem; color: #0d6efd;"></i>
                    <h5 class="card-title mt-3">Products</h5>
                    <p class="card-text">View and manage all product details.</p>
                    <a asp-controller="Products" asp-action="Index" class="btn btn-outline-primary">Go to Products</a>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body text-center">
                    <i class="bi bi-clipboard-data" style="font-size: 2.5rem; color: #198754;"></i>
                    <h5 class="card-title mt-3">Orders</h5>
                    <p class="card-text">View and manage all order details.</p>
                    <a asp-controller="Orders" asp-action="Index" class="btn btn-outline-success">Go to Orders</a>
                </div>
            </div>
        </div>
    </div>
</div>

