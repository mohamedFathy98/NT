@model IEnumerable<Product>

<h2>Products</h2>

@* <p> *@
@*     <a asp-action="Create">Create New Product</a> *@
@* </p> *@

<table class="table">
    <thead>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Price</th>
            <th>Category</th>
            @* <th>Actions</th> *@
        </tr>
    </thead>
    <tbody>
        @foreach (var product in Model)
        {
            <tr>
                <td>@product.Id</td>
                <td>@product.Name</td>
                <td>@product.Price</td>
                <td>@product.Description</td>
                @* <td> *@
                @*     <a asp-action="Create" asp-controller="Products">Add New</a> *@
                @* </td> *@
            </tr>
        }
    </tbody>
</table>